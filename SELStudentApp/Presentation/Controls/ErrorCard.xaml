<UserControl
    x:Class="SELStudentApp.Presentation.Controls.ErrorCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SELStudentApp.Presentation.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Frame Background="{ThemeResource ErrorContainerColor}" Padding="15" CornerRadius="5">
        <StackPanel Orientation="Horizontal" Spacing="10">
            <FontIcon FontFamily="{StaticResource MaterialSymbols}" Glyph="&#xE000;"
                      VerticalAlignment="Center"/>
            <TextBlock Text="{x:Bind Message, Mode=OneWay}" Foreground="{ThemeResource ErrorColor}"
                       VerticalAlignment="Center"/>
        </StackPanel>
    </Frame>
</UserControl>
